<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6">
    <%= form.text_field :user_id, id: :book_publisher_user_id, value:current_user.id, type:"hidden" %>
  </div>
  
  <div>
    <%= current_user.role %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :ebook, style: "display: block" %>
    <%= form.file_field :ebook %>
  </div>

  <div>
    <%= form.label :audiobook, style: "display: block" %>
    <%= form.file_field :audiobook %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :cover, style: "display: block" %>
    <%= form.file_field :cover %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category_id, options_for_select(@categories.collect { |cat| [cat.category_name,cat.id]})%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
